@model CrawlerDAL.DTOs.LoginDTO

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/_LayoutPage.cshtml";
}

@using (Html.BeginForm("Login", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="row site-title">
        <div class="col-md-12 text-center">
            <h3>登入</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-5 col-md-offset-3 ">
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">帳號名稱</label>
                <div class="input-icon">
                    <i class="fa fa-user"></i>
                    @Html.TextBoxFor(m => m.Account, new { @class = "form-control placeholder-no-fix", @placeholder = "帳號", @autocomplete = "off", @Value = "" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">帳號密碼</label>
                <div class="input-icon">
                    <i class="fa fa-lock"></i>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control placeholder-no-fix", @placeholder = "密碼", @autocomplete = "off", @value = "" })
                </div>
            </div>
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            <br />
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="登入">
            </div>
        </div>
    </div>
}