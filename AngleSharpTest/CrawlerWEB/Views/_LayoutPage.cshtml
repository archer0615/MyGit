@using CrawlerWEB.Common;
@{
    var userData = SessionHelper.UserData;
}
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <style>
        * {
            font-family: Microsoft JhengHei;
        }
    </style>
    @RenderSection("CSS", false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("首頁", "StockList", "Category", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">
                    @if (Convert.ToBoolean(Session["Auth"]))
                    {
                        @Session["UserName"]
                        @Html.ActionLink("登出", "Logout", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    }
                    else
                    {
                        <li>@Html.ActionLink("登入", "Login", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>
                        <li>@Html.ActionLink("註冊", "Register", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>
                    }
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        <hr />
        <hr />
        @RenderBody()
        <hr />

    </div>
    <footer class="container">
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    @RenderSection("JS", false)

</body>
</html>
